@model List<Income>
@{
    ViewData["Title"] = "Gəlirlər";
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="card-title">Gəlirlər</h4>
                    <a asp-controller="Incomes" asp-action="CreateIncome" class="btn btn-outline-primary" style="margin-right:10px; color:white !important">Yarat</a>
                </div>
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th style="color:orange !important"> Gəlir </th>
                            <th style="color:orange !important"> Gəlir Haqqında </th>
                            <th style="color:orange !important"> Gəlirin Vaxtı </th>
                            <th style="color:orange !important"> Qeyd Edən Şəxs </th>
                            <th style="color:orange !important"> Əməliyyatlar </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Income income in Model)
                        {
                            <tr>
                                <td style="color:white !important"> ₼ @income.Price </td>
                                <td style="color:white !important"> @income.AboutPrice </td>
                                <td style="color:white !important"> @income.IncomesTime </td>
                                <td style="color:white !important"> @income.AppUser.Name  @income.AppUser.Surname </td>
                                <td style="color:white !important">
                                    <a asp-controller="Incomes" asp-action="UpdateIncome" asp-route-incomeId="@income.Id" class="btn btn-outline-info" style="margin-right:10px; color:white !important">Gəlir Yenilə</a>
                                    <a asp-controller="Incomes" asp-action="DetailIncome" asp-route-incomeId="@income.Id" class="btn btn-outline-dribbble" style="margin-right:10px; color:white !important">Gəlir Təfərrüatı</a>

                                </td>

                            </tr>
                        }
                    <tbody>
                    <tfoot>
                        <tr>
                            <th style="color:orange !important"> Gəlir </th>
                            <th style="color:orange !important"> Gəlir Haqqında </th>
                            <th style="color:orange !important"> Gəlirin Vaxtı </th>
                            <th style="color:orange !important"> Qeyd Edən Şəxs </th>
                            <th style="color:orange !important"> Əməliyyatlar </th>
                        </tr>
                    </tfoot>
                </table>



            </div>
        </div>
    </div>
</div>