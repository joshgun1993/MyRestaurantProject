@model Employee
@{
    ViewData["Title"] = "İşçi Yarat";
}

<form method="post" enctype="multipart/form-data"> 
    <div class="form-group">
        <label asp-for="@Model.Name">Ad</label>
        <input style="color:honeydew" asp-for="@Model.Name" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname">Soyad</label>
        <input style="color:honeydew" asp-for="@Model.Surname" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
    </div>

    <!-- Bu kod Erkək və Qadının Cinsiyyətini seçmək üçündür. -->
    @*<div class="form-group">
    <input type="radio" name="gender" id="male" class="with-gap">
    <label for="True">Kişi</label>

    <input type="radio" name="gender" id="female" class="with-gap">
    <label for="False" class="m-l-20">Qadın</label>
    <span class="text-danger" asp-validation-for="@Model.IsMale"></span>
    </div>*@

    <div class="form-group">
        <label asp-for="@Model.Salary">Maaş</label>
        <input style="color:honeydew" asp-for="@Model.Salary" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Salary"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber">Telefon</label>
        <input style="color:honeydew" asp-for="@Model.PhoneNumber" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email">Email</label>
        <input style="color:honeydew" asp-for="@Model.Email" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-group">

        <label asp-for="@Model.DateOfBirth">Doğum Tarixi</label>
        <input type="date" style="color:honeydew" asp-for="@Model.DateOfBirth" class="form-control">
        <span class="text-danger" asp-validation-for="@Model.DateOfBirth"></span>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Vəzifəsi</label>
        <select style="color:honeydew" class="form-control" name="posId" id="exampleFormControlSelect1">
            @foreach (Position position in ViewBag.Positions) 
            {
                 <option style="color:honeydew" value="@position.Id"  id="positionId">@position.PositionName</option>
            }    
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Yarat</button>
    <a asp-action="Index" class="btn btn-primary">Geri</a>
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}