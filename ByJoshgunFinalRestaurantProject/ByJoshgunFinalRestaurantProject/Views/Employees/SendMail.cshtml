@model EmailMessage
@{
    ViewData["Title"] = "SendMail";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label asp-for="@Model.Subject">Başlıq</label>
    <input style="color:honeydew" asp-for="@Model.Subject" class="form-control">
    <span class="text-danger" asp-validation-for="@Model.Subject"></span>
  </div>
  <div class="form-group">
    <label asp-for="@Model.Body">Mövzu</label>
    <input style="color:honeydew" asp-for="@Model.Body" class="form-control">
    <span class="text-danger" asp-validation-for="@Model.Body"></span>
  </div>
  <button type="submit" class="btn btn-outline-success">Göndər</button>
  <a asp-action="Index" class="btn btn-outline-primary">Geri</a>
</form>



@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}







