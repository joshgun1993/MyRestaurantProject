@model Position
@{
    ViewData["Title"] = "Yemək Yarat";
}

<form method="post">

  <div class="form-group">
    <label asp-for="@Model.PositionName">Vəzifənin Adı</label>
    <input style="color:honeydew" asp-for="@Model.PositionName" class="form-control" aria-describedby="emailHelp">
    <span class="text-danger" asp-validation-for="@Model.PositionName"></span>
  </div>

  <button type="submit" class="btn btn-primary">Yarat</button>
  <a asp-action="Index" class="btn btn-primary">Geri</a>
</form>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}