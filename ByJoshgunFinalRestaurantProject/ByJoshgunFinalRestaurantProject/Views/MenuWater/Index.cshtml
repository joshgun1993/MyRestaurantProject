@model List<MenuWater>
@{
    ViewData["Title"] = "Içkilər";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-end align-items-center">
                    <a asp-controller="MenuWater" asp-action="CreateMenuWater" class="btn btn-outline-primary" style="margin-right:10px; color:white !important">Içki Menyusu Yarat</a>
                </div>

                @foreach (MenuWater menuWater in Model)
                {
                    <div class="container" style="margin-top: 20px;">
                        <h4 class="card-title" data-id="menuWaterId-@menuWater.Id">@menuWater.Name</h4>
                        <div class="d-flex justify-content-end align-items-center">
                            <table class="table table-hover table-dark" style="color:white !important">
                                <thead>
                                    <tr>
                                        <th>
                                            @if (!menuWater.IsDeactive)
                                            {
                                                <span class="text-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Deaktiv</span>
                                            }
                                        </th>
                                    </tr>
                                </thead>
                            </table>
                            <a asp-controller="MenuWater" asp-action="CreateWater" asp-route-menuWaterId="@menuWater.Id" class="btn btn-outline-primary" style="margin-right:10px; color:white !important">İçki Yarat</a>
                            <a asp-controller="MenuWater" asp-action="UpdateMenuWater" asp-route-menuWaterId="@menuWater.Id" class="btn btn-outline-info" style="margin-right:10px; color:white !important">Menyu Yenilə</a>

                            @if (!menuWater.IsDeactive)
                            {
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-outline-danger" style="color:white !important" data-toggle="modal" data-target="#menuWater-@menuWater.Id">
                                    Deaktiv Et
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="menuWater-@menuWater.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h3> Deaktiv etmək istədiyinizə əminsiniz?</h3>
                                                <a asp-controller="MenuWater" asp-action="ActivityMenuWater" asp-route-menuWaterId="@menuWater.Id" class="btn btn-outline-success" style="color:white !important">Bəli</a>
                                                <button type="button" class="btn btn-outline-danger" style="margin-right:10px; color:white !important" data-dismiss="modal">Xeyr</button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-outline-success" style="color:white !important" data-toggle="modal" data-target="#menuWater-@menuWater.Id">
                                    Aktiv Et
                                </button>
                                <!-- Modal -->
                                <div class="modal fade" id="menuWater-@menuWater.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <h3> Aktiv etmək istədiyinizə əminsiniz?</h3>
                                                <a asp-controller="MenuWater" asp-action="ActivityMenuWater" asp-route-menuWaterId="@menuWater.Id" class="btn btn-outline-success" style="color:white !important">Bəli</a>
                                                <button type="button" class="btn btn-outline-danger" style="margin-right:10px; color:white !important" data-dismiss="modal">Xeyr</button>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <table class="table table-hover table-dark" style="color:white !important">
                            <thead>
                                <tr>
                                    <th style="color:orange !important"> Adı </th>
                                    <th style="color:orange !important"> Qiyməti </th>
                                    <th style="color:orange !important"> Status </th>
                                    <th style="color:orange !important"> Əməliyyatlar </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Water water in menuWater.Water)
                                {
                                    <tr>
                                        <td style="color:white !important"> @water.Name </td>
                                        <td style="color:white !important"> ₼ @water.Price </td>
                                        <td>
                                            @if (!water.IsDeactive)
                                            {
                                                <span class="text-success">Aktiv</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Deaktiv</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="MenuWater" asp-action="UpdateWater" asp-route-waterId="@water.Id" class="btn btn-outline-info" style="margin-right:10px; color:white !important">İçki Yenilə</a>

                                            @if (!water.IsDeactive)
                                            {
                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-outline-danger" style="color:white !important" data-toggle="modal" data-target="#water-@water.Id">
                                                    Deaktiv Et
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="water-@water.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h3> Deaktiv etmək istədiyinizə əminsiniz?</h3>
                                                                <a asp-controller="MenuWater" asp-action="ActivityWater" asp-route-waterId="@water.Id" class="btn btn-outline-success" style="margin-right:10px; color:white !important">Bəli</a>
                                                                <button type="button" class="btn btn-outline-danger" style="margin-right:10px; color:white !important" data-dismiss="modal">Xeyr</button>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            }
                                            else
                                            {

                                                <!-- Button trigger modal -->
                                                <button type="button" class="btn btn-outline-success" style="color:white !important" data-toggle="modal" data-target="#water-@water.Id">
                                                    Aktiv Et
                                                </button>

                                                <!-- Modal -->
                                                <div class="modal fade" id="water-@water.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <h3> Aktiv etmək istədiyinizə əminsiniz?</h3>
                                                                <a asp-controller="MenuWater" asp-action="ActivityWater" asp-route-waterId="@water.Id" class="btn btn-outline-success" style="margin-right:10px; color:white !important">Bəli</a>
                                                                <button type="button" class="btn btn-outline-danger" style="margin-right:10px; color:white !important" data-dismiss="modal">Xeyr</button>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Bağla</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>


                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th style="color:orange !important"> Adı </th>
                                    <th style="color:orange !important"> Qiyməti </th>
                                    <th style="color:orange !important"> Status </th>
                                    <th style="color:orange !important"> Əməliyyatlar </th>
                                </tr>
                            </tfoot>
                        </table>

                    </div>
                }
            </div>
        </div>
    </div>
</div>